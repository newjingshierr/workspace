<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
    <section name="serviceCenter" type="Akmii.ServiceCenter.Config.ServiceCenterSection,Akmii.ServiceCenter" />
    <section name="IdWorkerConfig" type="Akmii.Core.IdWorkerConfig,Akmii.Core" />
    <section name="serviceCenterClient" type="Akmii.ServiceCenter.SocketClient.Config.ServiceCenterClientSection,Akmii.ServiceCenter.SocketClient" />
  </configSections>

  <IdWorkerConfig>
    <WorkerID value="1"/>
    <DataCenter value="1"/>
  </IdWorkerConfig>
  <serviceCenterClient>
    <SocketServers>
      <clearSocketServers />
      <SocketServer name="ConfigServer" address="127.0.0.1" port="2001" maxConnections="1000" maxSimultaneousConnectOps="10" bufferSize="1024" receivePrefixLength="4" sendPrefixLength="4" retryTimes="3" />
    </SocketServers>
  </serviceCenterClient>

  <appSettings>
    <add key="WarnTimeOutSeconds" value="1000"/>
    <add key="ErrorTimeOutSeconds" value="5000"/>
  </appSettings>

  <serviceCenter>
    <ServiceName value="Akmii.xxxx" />
    <SocketServer>
      <Port value="24001端口配置" />
      <MaxNumberOfConnections value="4000" />
      <MaxSimultaneousAcceptOps value="10" />
      <Backlog value="10" />
      <ExcessSaeaObjectsInPool value="1" />
      <ReceivePrefixLength value="4" />
      <SendPrefixLength value="4" />
      <BufferSize value="1024" />
      <SocketMethods>
        <clearTypes />
        <addType type="Akmii.Flowcraft.Service.SocketServer, Akmii.Flowcraft.Service" />
      </SocketMethods>
    </SocketServer>
  </serviceCenter>

  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log\debug.txt" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <datePattern value="(yyyyMMdd)" />
      <appendToFile value="true" />
      <RollingStyle value="Size" />
      <MaxSizeRollBackups value="50" />
      <maximumFileSize value="5MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%t]%-5p %c - %m%n" />
      </layout>
    </appender>
    <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log\error.txt" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <datePattern value="(yyyyMMdd)" />
      <appendToFile value="true" />
      <RollingStyle value="Size" />
      <MaxSizeRollBackups value="100" />
      <maximumFileSize value="5MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%t]%-5p %c - %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
    <root>
      <level value="All" />
      <appender-ref ref="ErrorAppender"/>
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>
</configuration>